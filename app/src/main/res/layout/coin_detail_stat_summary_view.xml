<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    tools:ignore="HardcodedText">

    <View
        android:background="@color/gray_800"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/vertical"
        android:layout_width="1dp"
        android:layout_height="0dp" />

    <TextView
        android:textColor="@color/text_secondary"
        android:text="Market Cap"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/market_cap_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        tools:text="$1.15T"
        app:layout_constraintTop_toBottomOf="@id/market_cap_title"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/market_cap_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="16dp"
        android:textColor="@color/text_secondary"
        android:text="Circulating Supply"
        app:layout_constraintTop_toBottomOf="@id/market_cap_value"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/circulating_supply_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        tools:text="18.846M"
        app:layout_constraintTop_toBottomOf="@id/circulating_supply_title"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/circulating_supply_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="16dp"
        android:textColor="@color/text_secondary"
        android:text="Total Supply"
        app:layout_constraintTop_toBottomOf="@id/circulating_supply_value"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/total_supply_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        tools:text="18.85M"
        app:layout_constraintTop_toBottomOf="@id/total_supply_title"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/total_supply_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="16dp"
        android:textColor="@color/text_secondary"
        android:text="All Time High"
        app:layout_constraintTop_toBottomOf="@id/total_supply_value"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/ath_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        tools:text="$64,863.10"
        app:layout_constraintTop_toBottomOf="@id/ath_title"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/ath_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginStart="16dp"
        android:textColor="@color/text_secondary"
        android:text="Volume 24h"
        app:layout_constraintStart_toEndOf="@id/vertical"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/volume_24h_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        tools:text="$64,863.10"
        app:layout_constraintStart_toEndOf="@id/vertical"
        app:layout_constraintTop_toBottomOf="@id/volume_24h_title"
        android:id="@+id/volume_24h_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:textColor="@color/text_secondary"
        android:text="Max Supply"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/volume_24h_value"
        app:layout_constraintStart_toEndOf="@id/vertical"
        android:id="@+id/max_supply_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        tools:text="21.000 M"
        app:layout_constraintStart_toEndOf="@id/vertical"
        app:layout_constraintTop_toBottomOf="@id/max_supply_title"
        android:id="@+id/max_supply_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:textColor="@color/text_secondary"
        android:text="Rank"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/max_supply_value"
        app:layout_constraintStart_toEndOf="@id/vertical"
        android:id="@+id/rank_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        tools:text="#1"
        app:layout_constraintStart_toEndOf="@id/vertical"
        app:layout_constraintTop_toBottomOf="@id/rank_title"
        android:id="@+id/rank_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        android:textColor="@color/text_secondary"
        android:text="Hash Algorithm"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/rank_value"
        app:layout_constraintStart_toEndOf="@id/vertical"
        android:id="@+id/hash_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginStart="16dp"
        tools:text="SHA-256"
        app:layout_constraintStart_toEndOf="@id/vertical"
        app:layout_constraintTop_toBottomOf="@id/hash_title"
        android:id="@+id/hash_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>