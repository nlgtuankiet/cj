<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:background="@drawable/coin_ticker_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_height="150dp"
    tools:layout_width="300dp"
    tools:padding="8dp">


    <LinearLayout
        android:id="@+id/icon_symbol_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center_vertical"
            tools:src="@drawable/dogecoin_icon" />

        <TextView
            android:id="@+id/symbol"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            tools:text="DOGE" />
    </LinearLayout>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/icon_symbol_container"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        tools:text="$0.287661" />


    <TextView
        android:id="@+id/change_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="4dp"
        android:layout_toStartOf="@id/source_icon"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        tools:text="6.6% ^"/>


    <ImageView
        android:id="@+id/source_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        tools:src="@drawable/dogecoin_icon" />


</RelativeLayout>