<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="HardcodedText"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_marginStart="16dp"
        android:textSize="24sp"
        android:text="Contact us"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/title"
        android:id="@+id/sub_title"
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:text="To request feature and report bug"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />


    <ImageView
        android:src="@drawable/telegram_icon"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        app:layout_constraintTop_toBottomOf="@id/sub_title"
        android:id="@+id/telegram_icon"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <Button
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/telegram_icon"
        app:layout_constraintTop_toTopOf="@id/telegram_icon"
        android:id="@+id/open_telegram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/open_telegram_group"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:src="@drawable/reddit_icon"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/telegram_icon"
        android:id="@+id/reddit_icon"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <Button
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/reddit_icon"
        app:layout_constraintTop_toTopOf="@id/reddit_icon"
        android:id="@+id/open_reddit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to subreddit"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:src="@drawable/mail_icon"
        android:scaleType="fitCenter"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/reddit_icon"
        android:id="@+id/email_icon"
        android:layout_width="48dp"
        android:layout_height="48dp" />

    <Button
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="@id/email_icon"
        app:layout_constraintTop_toTopOf="@id/email_icon"
        android:id="@+id/open_mail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Write an email"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>